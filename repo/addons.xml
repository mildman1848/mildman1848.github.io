<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
  <addon id="repository.mildman1848" name="mildman1848 Repository" provider-name="mildman1848" version="1.0.5">
    <extension point="xbmc.addon.repository" name="mildman1848 Repository">
      <dir>
        <info compressed="false">https://mildman1848.github.io/repo/addons.xml</info>
        <checksum>https://mildman1848.github.io/repo/addons.xml.md5</checksum>
        <datadir zip="true">https://mildman1848.github.io/repo/</datadir>
      </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
      <platform>all</platform>
      <summary lang="de_DE">Kodi Repository von mildman1848</summary>
      <summary lang="en_GB">Kodi repository by mildman1848</summary>
      <description lang="de_DE">Basis-Repository ohne eigene Addons.</description>
      <description lang="en_GB">Base repository without own addons yet.</description>
      <website>https://mildman1848.github.io/</website>
      <assets>
        <icon>repository.mildman1848/icon.png</icon>
      </assets>
    </extension>
  </addon>

  <addon id="plugin.video.vavootv" name="VavooTV" version="4.8" provider-name="Akisame">
    <requires>
      <import addon="script.module.requests"/>
      <import addon="script.module.infotagger" optional="true"/>
      <import addon="inputstream.adaptive" optional="true"/>
      <import addon="inputstream.ffmpegdirect" optional="true"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="main.py">
      <provides>video</provides>
    </extension>
    <extension point="xbmc.python.module" library="resources"/>
    <extension point="xbmc.addon.metadata">
      <assets>
        <icon>icon.png</icon>
      </assets>
    </extension>
  </addon>

  <addon id="plugin.audio.audiobookshelf" name="Audiobookshelf" version="0.1.21" provider-name="mildman1848">
    <requires>
      <import addon="xbmc.python" version="3.0.0"/>
      <import addon="script.module.requests"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="main.py">
      <provides>audio</provides>
    </extension>
    <extension point="xbmc.python.module" library="resources"/>
    <extension point="xbmc.addon.metadata">
      <summary lang="de_DE">Audiobookshelf Client für Hörbücher und Podcasts</summary>
      <summary lang="en_GB">Audiobookshelf client for audiobooks and podcasts</summary>
      <description lang="de_DE">Kodi Addon für Audiobookshelf mit Login (API-Key oder User/Pass), Wiedergabe, Fortschritts-Sync und STRM-Export.</description>
      <description lang="en_GB">Kodi addon for Audiobookshelf with API key or username/password login, playback, progress sync, and STRM export.</description>
      <platform>all</platform>
      <assets>
        <icon>abs_icon.png</icon>
      </assets>
    </extension>
  </addon>

  <addon id="metadata.albums.audible" name="Audible Album Scraper" version="1.0.1" provider-name="mildman1848">
    <requires>
      <import addon="xbmc.metadata" version="2.1.0"/>
    </requires>
    <extension point="xbmc.metadata.scraper.albums" language="de" library="audible.xml"/>
    <extension point="xbmc.addon.metadata">
      <summary lang="de_DE">Audible Albuminformationen</summary>
      <summary lang="en_GB">Audible album information</summary>
      <description lang="de_DE">Lädt Hörbuch-Albuminformationen aus der Audible Catalog API, mit vorbereiteter i18n-Struktur und Debug-Workflow.</description>
      <description lang="en_GB">Downloads audiobook album metadata from the Audible catalog API, with prepared i18n structure and debug workflow.</description>
      <platform>all</platform>
      <license>GPL-2.0-or-later</license>
      <source>https://community.mp3tag.de/t/ws-audible-via-api/64347</source>
      <assets>
        <icon>icon.png</icon>
      </assets>
    </extension>
  </addon>

  <addon id="metadata.artists.audible" name="Audible Artist Scraper" version="1.0.1" provider-name="mildman1848">
    <requires>
      <import addon="xbmc.metadata" version="2.1.0"/>
    </requires>
    <extension point="xbmc.metadata.scraper.artists" language="de" library="audible.xml"/>
    <extension point="xbmc.addon.metadata">
      <summary lang="de_DE">Audible Interpreteninformationen</summary>
      <summary lang="en_GB">Audible artist information</summary>
      <description lang="de_DE">Lädt Autoren- und Erzähler-Metadaten aus der Audible Catalog API, mit vorbereiteter i18n-Struktur und Debug-Workflow.</description>
      <description lang="en_GB">Downloads author and narrator metadata from the Audible catalog API, with prepared i18n structure and debug workflow.</description>
      <platform>all</platform>
      <license>GPL-2.0-or-later</license>
      <source>https://community.mp3tag.de/t/ws-audible-via-api/64347</source>
      <assets>
        <icon>icon.png</icon>
      </assets>
    </extension>
  </addon>
</addons>
